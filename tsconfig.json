{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "pretty": true,
    "sourceMap": false,
    "strict": true,
    "target": "esnext",
    "paths": {
      "react-aptor": ["./src/index.ts"],
      "react-aptor/*": ["./src/*.ts"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
